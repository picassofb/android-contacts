<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/students_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/studens_form_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address" />

    <EditText
        android:id="@+id/studens_form_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"/>

    <EditText
        android:id="@+id/students_form_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Website"/>

    <EditText
        android:id="@+id/students_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <RatingBar
        android:id="@+id/students_form_ratebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>